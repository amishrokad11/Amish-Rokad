


{% style %}


    .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{% endstyle %}



{% schema %}
{
  "name": "Custom Gift Guide Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Gift Guide Banner",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<section class="gift-guide-banner" style="background-image: url({{ section.settings.background_image | img_url: '2048x' }});">
  <div class="gift-guide-banner__overlay">
    <div class="gift-guide-banner__content">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.subheading }}</p>
      {% if section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="gift-guide-banner__button">
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

<style>
.gift-guide-banner {
  background-size: cover;
  background-position: center;
  padding: 100px 20px;
  color: #000;
  text-align: left;
  position: relative;
}
.gift-guide-banner__overlay {
  background-color: rgba(255,255,255,0.7); /* Optional overlay for contrast */
  padding: 40px;
  max-width: 800px;
  margin: 0 auto;
}
.gift-guide-banner__content h2 {
  font-size: 42px;
  margin-bottom: 20px;
}
.gift-guide-banner__content p {
  font-size: 18px;
  margin-bottom: 30px;
}
.gift-guide-banner__button {
  background: #000;
  color: #fff;
  padding: 14px 28px;
  text-decoration: none;
  font-weight: bold;
}
@media (max-width: 768px) {
  .gift-guide-banner {
    text-align: center;
    padding: 60px 20px;
  }
}
</style>
