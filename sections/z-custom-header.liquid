{% comment %}
  Custom Header Section with Shopify Color Scheme & Button Color Settings
{% endcomment %}

{{ 'custom-header.css' | asset_url | stylesheet_tag }}

{% style %}
  .custom-button {
    background-color: {{ section.settings.button_background }};
    color: {{ section.settings.button_text }};
  }

  .custom-button:hover {
    background-color: {{ section.settings.button_hover }};
  }

    .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{% endstyle %}

<section class="header--section color-{{ section.settings.color_scheme }} section-{{ section.id }}-padding">
  <div class="custom-header-wrapper page-width">
    <div class="custom-header-inner">
      <div class="custom-logo">
        {{ section.settings.logo_text }}
      </div>
      <div class="custom-tagline">
        {{ section.settings.tagline_text }}
      </div>
      <div class="choose-gift-desktop">
        <a class="custom-button" href="{{ section.settings.button_link }}">
          {{ section.settings.button_text_label }}
             <img
          src="{{ 'Right-Arrow.svg' | asset_url }}"
          alt=""
          class="gift-guide-button__icon"
          loading="lazy" width="20" height="20"
        >
        </a>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Custom Header",
  "tag": "section",
  "class": "section custom-header-section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo Name",
      "default": "TISSO VISON"
    },
    {
      "type": "text",
      "id": "tagline_text",
      "label": "Tagline Text",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "button_text_label",
      "label": "Button label",
      "default": "Click me"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "button_background",
      "label": "Button background color",
      "default": "#007bff"
    },
    {
      "type": "color",
      "id": "button_text",
      "label": "Button text color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_hover",
      "label": "Button hover color",
      "default": "#0056b3"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 12
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 12
    }
  ],
  "presets": [
    {
      "name": "Custom Header",
      "category": "Custom"
    }
  ]
}
{% endschema %}
